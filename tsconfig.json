{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "es6", // Specifies the target JavaScript version
    "module": "CommonJS", // Module code generation method
    "strict": true, // Enables strict type checking
    "esModuleInterop": true, // Enables compatibility between CommonJS and ES Modules
    "skipLibCheck": true // Skips type checking of declaration files
  },
  "include": [
    "test/**/*.ts", // Specifies the files to include in the compilation
    "src/**/*.ts", // Specifies the files to include in the compilation
    "test/CustomButton.test.js"
  ],
  "exclude": [
    "node_modules" // Excludes the node_modules directory
  ]
}
